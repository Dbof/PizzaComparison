<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/name"></TextView>
	<EditText
		android:id="@+id/txtName"
		android:layout_height="wrap_content"
		android:text="Name"
		android:layout_width="match_parent"></EditText>
	<TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/diameter"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:text="Diameter"
		android:layout_width="match_parent"
		android:id="@+id/txtDiameter" android:inputType="numberDecimal"></EditText>
	<TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/price"></TextView>
	<EditText
		android:layout_height="wrap_content"
		android:text="Price"
		android:layout_width="match_parent"
		android:id="@+id/txtSellingPrice" android:inputType="numberDecimal"></EditText>
	<Button
		android:layout_height="wrap_content"
		android:id="@+id/btnSave" android:text="@string/save" android:layout_width="match_parent"></Button>

</LinearLayout>